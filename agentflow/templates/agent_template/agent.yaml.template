meta:
  id: {{ agent_id }}
  name: {{ agent_name }}
  version: 1.0.0
  author: {{ author }}
  icon: {{ icon }}
  category: {{ category }}
  description: {{ description }}

interfaces:
  inputs:
    - name: input
      type: string
      required: true
      description: Input data
      default: ""
  
  outputs:
    - name: output
      type: string
      description: Output result

protocols:
  {% if enable_mcp %}
  mcp:
    enabled: true
    servers: []
  {% endif %}
  
  {% if enable_a2a %}
  a2a:
    enabled: true
    endpoint: http://localhost:8000
    skills:
      - name: process
        description: Process input data
  {% endif %}
  
  {% if enable_agui %}
  agui:
    enabled: true
    stream_events: true
  {% endif %}

dependencies:
  agents: []
  tools: []
  packages: []

pocketflow:
  entry_point: {{ entry_point }}
  flow_name: {{ flow_name }}

visual:
  color: "{{ color }}"
  ports:
    input: [100, 50]
    output: [300, 50]

